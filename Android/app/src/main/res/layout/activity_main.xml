<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/game_background"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_home_1"
        android:layout_width="372dp"
        android:layout_height="372dp"
        android:layout_marginStart="-55dp"
        android:src="@drawable/home_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_home_2"
        android:layout_width="372dp"
        android:layout_height="372dp"
        android:layout_marginStart="-55dp"
        android:src="@drawable/home_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_home_3"
        android:layout_width="372dp"
        android:layout_height="372dp"
        android:layout_marginEnd="-55dp"
        android:src="@drawable/home_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_logo"
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mode_0"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_home"
        android:text="Multi mode"
        android:textColor="@drawable/btn_home"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mode_1"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_home"
        android:text="Beginner mode"
        android:textColor="@drawable/btn_home"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mode_0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mode_2"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_home"
        android:text="Expert mode"
        android:textColor="@drawable/btn_home"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mode_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mode_3"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_home"
        android:text="My Rank"
        android:textColor="@drawable/btn_home"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mode_2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mode_4"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_home"
        android:text="Encyclopedia"
        android:textColor="@drawable/btn_home"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mode_3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mode_5"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_home"
        android:text="Tutorial"
        android:textColor="@drawable/btn_home"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mode_4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mode_6"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_home"
        android:text="Logout"
        android:textColor="@drawable/btn_home"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mode_5" />

</androidx.constraintlayout.widget.ConstraintLayout>